<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rcc.resistorcolorcode.MainActivity$PlaceholderFragment" >

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rd_code4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/btn_s_4code" />

        <RadioButton
            android:id="@+id/rd_code5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_s_5code" />

        <RadioButton
            android:id="@+id/rd_code6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_s_6code" />
    </RadioGroup>

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp1"
        android:layout_below="@+id/sp1" />

    <Spinner
        android:id="@+id/sp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp2"
        android:layout_below="@+id/sp2" />

    <Spinner
        android:id="@+id/sp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp3"
        android:layout_below="@+id/sp3" />

    <Spinner
        android:id="@+id/sp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp4"
        android:layout_below="@+id/sp4" />

    <Spinner
        android:id="@+id/sp6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp5"
        android:layout_below="@+id/sp5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sp6"
        android:text="@string/btn1_s" />

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp6"
        android:layout_alignTop="@+id/btn1" />

</RelativeLayout>